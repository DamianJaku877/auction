{% extends 'base.html.twig' %}
{% block stylesheets %}
<style>
    div.container{
        color: white;
    }
    form{
        margin: 20px;
        color: white;
    }
</style>
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group ">
                        {{ form_start(form) }}
                        <div class="col-4">
                            {{ form_label(form.name, 'auctions.formadd.name'|trans) }}
                            {{ form_widget(form.name) }}
                        </div>
                        <div class="col-4">
                            {{ form_label(form.description, 'auctions.formadd.name'|trans) }}
                            {{ form_widget(form.description) }}
                        </div>
                        <div class="col-4">
                            {{ form_label(form.price, 'auctions.formadd.price'|trans) }}
                            {{ form_widget(form.price) }}
                        </div>
                        <div class="col-4">
                            {{ form_label(form.startPrice, 'auctions.formadd.startPrice'|trans) }}
                            {{ form_widget(form.startPrice) }}
                        </div>
                        <div class="col-4">
                            {{ form_label(form.expiresAt, 'auctions.formadd.expiresAt'|trans) }}
                            {{ form_widget(form.expiresAt, 'attr') }}
                        </div>
                        {{ form_end(form) }}
                    </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}